<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.infrastructure.mapper.PokemonMapper">

    <select id="findAll" resultType="com.example.infrastructure.entity.PokemonEntity">
        SELECT
            id,
            name,
            genus,
            height,
            weight
        FROM pokemons
        ORDER BY id ASC
    </select>

    <select id="findById" resultType="com.example.infrastructure.entity.PokemonEntity">
        SELECT
            id,
            name,
            genus,
            height,
            weight
        FROM pokemons
        WHERE id = #{id.value}
    </select>

</mapper>